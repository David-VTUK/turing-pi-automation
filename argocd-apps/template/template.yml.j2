apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ app_name }}
  namespace: {{ argocd_namespace }}
spec:
  project: default
  source:
    repoURL: '{{ chart_repo_url }}'
    chart: '{{ app_chart_name }}'
    targetRevision: '{{ app_chart_version }}'
    helm:
      valueFiles:
        - values.yaml
  destination:
    server: '{{ target_server }}'
    namespace: '{{ app_namespace }}'
  syncPolicy:
    automated:
      prune: {{ prune }}
      selfHeal: {{ self_heal }}